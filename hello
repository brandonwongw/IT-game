<body>
    <div class="header">
        <h1>ç¶“å…¸è²ªé£Ÿè›‡éŠæˆ²</h1>
        <p class="subtitle">æ§åˆ¶è›‡åƒåˆ°é£Ÿç‰©ï¼Œé¿å…æ’åˆ°ç‰†å£æˆ–è‡ªå·±çš„èº«é«”ï¼</p>
    </div>
    
    <div class="game-container">
        <div class="game-info">
            <div class="score-container">
                <div class="score-label">ç•¶å‰åˆ†æ•¸</div>
                <div class="score" id="score">0</div>
            </div>
            <div class="high-score-container">
                <div class="high-score-label">æœ€é«˜åˆ†æ•¸</div>
                <div class="high-score" id="highScore">0</div>
            </div>
        </div>
        
        <div class="game-board-container">
            <canvas id="gameCanvas" width="600" height="600"></canvas>
            
            <div class="game-over" id="gameOverScreen">
                <h2>éŠæˆ²çµæŸ</h2>
                <p>ä½ çš„åˆ†æ•¸: <span id="finalScore">0</span></p>
                <p id="newHighScoreMessage" style="display:none; color:#4dff91; font-weight:bold;">ğŸ‰ æ–°ç´€éŒ„ï¼ ğŸ‰</p>
                <button id="playAgainBtn">å†ç©ä¸€æ¬¡</button>
            </div>
        </div>
        
        <div class="controls">
            <button id="startBtn">é–‹å§‹éŠæˆ²</button>
            <button id="pauseBtn">æš«åœéŠæˆ²</button>
            <button id="restartBtn">é‡æ–°é–‹å§‹</button>
        </div>
        
        <div class="mobile-controls">
            <button class="up-btn" id="upBtn">â†‘</button>
            <button class="left-btn" id="leftBtn">â†</button>
            <button class="down-btn" id="downBtn">â†“</button>
            <button class="right-btn" id="rightBtn">â†’</button>
        </div>
        
        <div class="instructions">
            <h3>éŠæˆ²èªªæ˜</h3>
            <p>ä½¿ç”¨ <strong>æ–¹å‘éµ</strong> æˆ– <strong>WASD</strong> æ§åˆ¶è›‡çš„ç§»å‹•æ–¹å‘ã€‚</p>
            <p>åœ¨æ‰‹æ©Ÿä¸Šå¯ä»¥ä½¿ç”¨ç•«é¢ä¸­çš„æ–¹å‘æŒ‰éˆ•é€²è¡Œæ§åˆ¶ã€‚</p>
            <ul>
                <li>æ¯åƒåˆ°ä¸€å€‹é£Ÿç‰©ï¼Œè›‡çš„é•·åº¦å¢åŠ ï¼Œåˆ†æ•¸+10</li>
                <li>æ’åˆ°ç‰†å£æˆ–è‡ªå·±çš„èº«é«”éŠæˆ²çµæŸ</li>
                <li>éŠæˆ²é€Ÿåº¦æœƒéš¨è‘—åˆ†æ•¸å¢åŠ è€Œæé«˜</li>
                <li>æš«åœå¾Œå¯æŒ‰ç›¸åŒæŒ‰éˆ•ç¹¼çºŒéŠæˆ²</li>
            </ul>
        </div>
    </div>

    <script>
        // éŠæˆ²è®Šæ•¸
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        const scoreElement = document.getElementById('score');
        const highScoreElement = document.getElementById('highScore');
        const finalScoreElement = document.getElementById('finalScore');
        const gameOverScreen = document.getElementById('gameOverScreen');
        const newHighScoreMessage = document.getElementById('newHighScoreMessage');
        
        // æŒ‰éˆ•å…ƒç´ 
        const startBtn = document.getElementById('startBtn');
        const pauseBtn = document.getElementById('pauseBtn');
        const restartBtn = document.getElementById('restartBtn');
        const playAgainBtn = document.getElementById('playAgainBtn');
        
        // ç§»å‹•æ§åˆ¶æŒ‰éˆ•ï¼ˆæ‰‹æ©Ÿç‰ˆï¼‰
        const upBtn = document.getElementById('upBtn');
        const downBtn = document.getElementById('downBtn');
        const leftBtn = document.getElementById('leftBtn');
        const rightBtn = document.getElementById('rightBtn');
        
        // éŠæˆ²åƒæ•¸
        const gridSize = 20;
        const gridWidth = canvas.width / gridSize;
        const gridHeight = canvas.height / gridSize;
        
        let snake = [];
        let food = {};
        let direction = 'right';
        let nextDirection = 'right';
        let gameSpeed = 120; // æ¯«ç§’
        let score = 0;
        let highScore = localStorage.getItem('snakeHighScore') || 0;
        let gameRunning = false;
        let gamePaused = false;
        let gameLoop;
        
        // åˆå§‹åŒ–æœ€é«˜åˆ†æ•¸é¡¯ç¤º
        highScoreElement.textContent = highScore;
        
        // åˆå§‹åŒ–éŠæˆ²
        function initGame() {
            // åˆå§‹åŒ–è›‡ - é•·åº¦ç‚º4
            snake = [
                {x: 5, y: 10},
                {x: 4, y: 10},
                {x: 3, y: 10},
                {x: 2, y: 10}
            ];
            
            // åˆå§‹åŒ–é£Ÿç‰©ä½ç½®
            generateFood();
            
            // é‡ç½®éŠæˆ²ç‹€æ…‹
            direction = 'right';
            nextDirection = 'right';
            score = 0;
            gameSpeed = 120;
            scoreElement.textContent = score;
            
            // éš±è—éŠæˆ²çµæŸç•«é¢
            gameOverScreen.style.display = 'none';
        }
        
        // ç”Ÿæˆé£Ÿç‰©
        function generateFood() {
            // éš¨æ©Ÿç”Ÿæˆé£Ÿç‰©ä½ç½®
            food = {
                x: Math.floor(Math.random() * gridWidth),
                y: Math.floor(Math.random() * gridHeight)
            };
            
            // ç¢ºä¿é£Ÿç‰©ä¸æœƒç”Ÿæˆåœ¨è›‡èº«ä¸Š
            for (let segment of snake) {
                if (segment.x === food.x && segment.y === food.y) {
                    return generateFood();
                }
            }
        }
        
        // ç¹ªè£½éŠæˆ²å…ƒç´ 
        function drawGame() {
            // æ¸…ç©ºç•«å¸ƒ
            ctx.fillStyle = '#0f3460';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // ç¹ªè£½ç¶²æ ¼
            drawGrid();
            
            // ç¹ªè£½è›‡
            drawSnake();
            
            // ç¹ªè£½é£Ÿç‰©
            drawFood();
        }
        
        // ç¹ªè£½ç¶²æ ¼
        function drawGrid() {
            ctx.strokeStyle = '#1a508b';
            ctx.lineWidth = 0.5;
            
            // å‚ç›´ç·š
            for (let x = 0; x <= canvas.width; x += gridSize) {
                ctx.beginPath();
                ctx.moveTo(x, 0);
                ctx.lineTo(x, canvas.height);
                ctx.stroke();
            }
            
            // æ°´å¹³ç·š
            for (let y = 0; y <= canvas.height; y += gridSize) {
                ctx.beginPath();
                ctx.moveTo(0, y);
                ctx.lineTo(canvas.width, y);
                ctx.stroke();
            }
        }
        
        // ç¹ªè£½è›‡
        function drawSnake() {
            // ç¹ªè£½è›‡é ­
            ctx.fillStyle = '#4dff91';
            ctx.fillRect(snake[0].x * gridSize, snake[0].y * gridSize, gridSize, gridSize);
            
            // ç¹ªè£½è›‡çœ¼ç›
            ctx.fillStyle = '#000';
            let eyeSize = gridSize / 5;
            
            // æ ¹æ“šæ–¹å‘ç¢ºå®šçœ¼ç›ä½ç½®
            let eyeOffsetX = 0;
            let eyeOffsetY = 0;
            
            if (direction === 'right') {
                eyeOffsetX = gridSize - eyeSize * 2;
                eyeOffsetY = eyeSize * 1.5;
            } else if (direction === 'left') {
                eyeOffsetX = eyeSize;
                eyeOffsetY = eyeSize * 1.5;
            } else if (direction === 'up') {
                eyeOffsetX = eyeSize * 1.5;
                eyeOffsetY = eyeSize;
            } else if (direction === 'down') {
                eyeOffsetX = eyeSize * 1.5;
                eyeOffsetY = gridSize - eyeSize * 2;
            }
            
            ctx.fillRect(snake[0].x * gridSize + eyeOffsetX, snake[0].y * gridSize + eyeOffsetY, eyeSize, eyeSize);
            
            // ç¹ªè£½è›‡èº«
            for (let i = 1; i < snake.length; i++) {
                // èº«é«”é¡è‰²æ¼¸è®Š
                let colorValue = 200 - (i * 5);
                if (colorValue < 50) colorValue = 50;
                
                ctx.fillStyle = `rgb(77, ${colorValue}, 145)`;
                ctx.fillRect(snake[i].x * gridSize, snake[i].y * gridSize, gridSize, gridSize);
                
                // èº«é«”å…§éƒ¨è£é£¾
                ctx.fillStyle = `rgba(255, 255, 255, 0.2)`;
                ctx.fillRect(snake[i].x * gridSize + 2, snake[i].y * gridSize + 2, gridSize - 4, gridSize - 4);
            }
        }
        
        // ç¹ªè£½é£Ÿç‰©
        function drawFood() {
            ctx.fillStyle = '#ff4d4d';
            ctx.beginPath();
            ctx.arc(
                food.x * gridSize + gridSize / 2,
                food.y * gridSize + gridSize / 2,
                gridSize / 2,
                0,
                Math.PI * 2
            );
            ctx.fill();
            
            // é£Ÿç‰©å…‰æšˆæ•ˆæœ
            ctx.fillStyle = 'rgba(255, 100, 100, 0.5)';
            ctx.beginPath();
            ctx.arc(
                food.x * gridSize + gridSize / 2,
                food.y * gridSize + gridSize / 2,
                gridSize / 2 + 2,
                0,
                Math.PI * 2
            );
            ctx.fill();
        }
        
        // æ›´æ–°éŠæˆ²ç‹€æ…‹
        function updateGame() {
            // æ›´æ–°è›‡çš„ç§»å‹•æ–¹å‘
            direction = nextDirection;
            
            // è¨ˆç®—æ–°çš„è›‡é ­ä½ç½®
            let head = {x: snake[0].x, y: snake[0].y};
            
            switch(direction) {
                case 'up':
                    head.y--;
                    break;
                case 'down':
                    head.y++;
                    break;
                case 'left':
                    head.x--;
                    break;
                case 'right':
                    head.x++;
                    break;
            }
            
            // æª¢æŸ¥æ˜¯å¦æ’ç‰†
            if (head.x < 0 || head.x >= gridWidth || head.y < 0 || head.y >= gridHeight) {
                gameOver();
                return;
            }
            
            // æª¢æŸ¥æ˜¯å¦æ’åˆ°è‡ªå·±
            for (let segment of snake) {
                if (head.x === segment.x && head.y === segment.y) {
                    gameOver();
                    return;
                }
            }
            
            // å°‡æ–°çš„é ­éƒ¨æ·»åŠ åˆ°è›‡èº«
            snake.unshift(head);
            
            // æª¢æŸ¥æ˜¯å¦åƒåˆ°é£Ÿç‰©
            if (head.x === food.x && head.y === food.y) {
                // å¢åŠ åˆ†æ•¸
                score += 10;
                scoreElement.textContent = score;
                
                // æ¯å¾—50åˆ†å¢åŠ éŠæˆ²é€Ÿåº¦
                if (score % 50 === 0 && gameSpeed > 50) {
                    gameSpeed -= 10;
                }
                
                // ç”Ÿæˆæ–°é£Ÿç‰©
                generateFood();
            } else {
                // å¦‚æœæ²’æœ‰åƒåˆ°é£Ÿç‰©ï¼Œç§»é™¤å°¾éƒ¨
                snake.pop();
            }
        }
        
        // éŠæˆ²ä¸»å¾ªç’°
        function gameStep() {
            if (!gameRunning || gamePaused) return;
            
            updateGame();
            drawGame();
            
            // è¨­ç½®ä¸‹ä¸€å€‹éŠæˆ²å¾ªç’°
            clearTimeout(gameLoop);
            gameLoop = setTimeout(gameStep, gameSpeed);
        }
        
        // éŠæˆ²çµæŸ
        function gameOver() {
            gameRunning = false;
            clearTimeout(gameLoop);
            
            // æ›´æ–°æœ€çµ‚åˆ†æ•¸
            finalScoreElement.textContent = score;
            
            // æª¢æŸ¥æ˜¯å¦æ‰“ç ´ç´€éŒ„
            if (score > highScore) {
                highScore = score;
                highScoreElement.textContent = highScore;
                localStorage.setItem('snakeHighScore', highScore);
                newHighScoreMessage.style.display = 'block';
            } else {
                newHighScoreMessage.style.display = 'none';
            }
            
            // é¡¯ç¤ºéŠæˆ²çµæŸç•«é¢
            gameOverScreen.style.display = 'block';
        }
        
        // é–‹å§‹éŠæˆ²
        function startGame() {
            if (gameRunning) return;
            
            if (!gamePaused) {
                initGame();
            }
            
            gameRunning = true;
            gamePaused = false;
            startBtn.textContent = 'éŠæˆ²ä¸­...';
            startBtn.disabled = true;
            pauseBtn.disabled = false;
            
            gameStep();
        }
        
        // æš«åœ/ç¹¼çºŒéŠæˆ²
        function togglePause() {
            if (!gameRunning) return;
            
            gamePaused = !gamePaused;
            
            if (gamePaused) {
                pauseBtn.textContent = 'ç¹¼çºŒéŠæˆ²';
                clearTimeout(gameLoop);
            } else {
                pauseBtn.textContent = 'æš«åœéŠæˆ²';
                gameStep();
            }
        }
        
        // é‡æ–°é–‹å§‹éŠæˆ²
        function restartGame() {
            clearTimeout(gameLoop);
            gameRunning = false;
            gamePaused = false;
            startBtn.textContent = 'é–‹å§‹éŠæˆ²';
            startBtn.disabled = false;
            pauseBtn.textContent = 'æš«åœéŠæˆ²';
            pauseBtn.disabled = true;
            
            initGame();
            drawGame();
        }
        
        // éµç›¤æ§åˆ¶
        document.addEventListener('keydown', (e) => {
            // é˜²æ­¢æŒ‰éµæ»¾å‹•é é¢
            if ([32, 37, 38, 39, 40].includes(e.keyCode)) {
                e.preventDefault();
            }
            
            // æ–¹å‘éµæ§åˆ¶
            switch(e.key) {
                case 'ArrowUp':
                case 'w':
                case 'W':
                    if (direction !== 'down') nextDirection = 'up';
                    break;
                case 'ArrowDown':
                case 's':
                case 'S':
                    if (direction !== 'up') nextDirection = 'down';
                    break;
                case 'ArrowLeft':
                case 'a':
                case 'A':
                    if (direction !== 'right') nextDirection = 'left';
                    break;
                case 'ArrowRight':
                case 'd':
                case 'D':
                    if (direction !== 'left') nextDirection = 'right';
                    break;
                case ' ':
                    // ç©ºæ ¼éµæš«åœ/ç¹¼çºŒ
                    if (gameRunning) {
                        togglePause();
                    } else {
                        startGame();
                    }
                    break;
            }
        });
        
        // æŒ‰éˆ•äº‹ä»¶ç›£è½
        startBtn.addEventListener('click', startGame);
        pauseBtn.addEventListener('click', togglePause);
        restartBtn.addEventListener('click', restartGame);
        playAgainBtn.addEventListener('click', () => {
            restartGame();
            startGame();
        });
        
        // æ‰‹æ©Ÿæ§åˆ¶æŒ‰éˆ•äº‹ä»¶
        upBtn.addEventListener('click', () => { if (direction !== 'down') nextDirection = 'up'; });
        downBtn.addEventListener('click', () => { if (direction !== 'up') nextDirection = 'down'; });
        leftBtn.addEventListener('click', () => { if (direction !== 'right') nextDirection = 'left'; });
        rightBtn.addEventListener('click', () => { if (direction !== 'left') nextDirection = 'right'; });
        
        // è§¸æ§æ§åˆ¶ï¼ˆæ»‘å‹•ï¼‰
        let touchStartX = 0;
        let touchStartY = 0;
        
        canvas.addEventListener('touchstart', (e) => {
            touchStartX = e.touches[0].clientX;
            touchStartY = e.touches[0].clientY;
            e.preventDefault();
        }, { passive: false });
        
        canvas.addEventListener('touchmove', (e) => {
            e.preventDefault();
        }, { passive: false });
        
        canvas.addEventListener('touchend', (e) => {
            if (!gameRunning) return;
            
            let touchEndX = e.changedTouches[0].clientX;
            let touchEndY = e.changedTouches[0].clientY;
            
            let dx = touchEndX - touchStartX;
            let dy = touchEndY - touchStartY;
            
            // ç¢ºå®šä¸»è¦ç§»å‹•æ–¹å‘
            if (Math.abs(dx) > Math.abs(dy)) {
                // æ°´å¹³æ»‘å‹•
                if (dx > 0 && direction !== 'left') {
                    nextDirection = 'right';
                } else if (dx < 0 && direction !== 'right') {
                    nextDirection = 'left';
                }
            } else {
                // å‚ç›´æ»‘å‹•
                if (dy > 0 && direction !== 'up') {
                    nextDirection = 'down';
                } else if (dy < 0 && direction !== 'down') {
                    nextDirection = 'up';
                }
            }
            
            e.preventDefault();
        }, { passive: false });
        
        // åˆå§‹åŒ–éŠæˆ²ç•«é¢
        initGame();
        drawGame();
        
        // é©æ‡‰ä¸åŒè¢å¹•å¤§å°
        function resizeCanvas() {
            const maxWidth = Math.min(600, window.innerWidth - 40);
            const canvasSize = Math.min(maxWidth, window.innerHeight - 450);
            
            canvas.style.width = `${canvasSize}px`;
            canvas.style.height = `${canvasSize}px`;
        }
        
        window.addEventListener('resize', resizeCanvas);
        resizeCanvas();
    </script>
</body>
</html>
